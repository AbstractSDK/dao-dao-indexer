{
  "name": "wasmd-indexer",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "db:setup": "node dist/db/setup.js",
    "db:alter": "node dist/db/alter.js",
    "export": "node dist/export/index.js",
    "export:prod": "pm2 stop ecosystem.config.js --only exporter && npm run build && pm2 start ecosystem.config.js --only exporter",
    "serve": "node dist/server/index.js",
    "serve:dev": "nodemon --watch dist --signal SIGTERM --exec \"node dist/server/index.js\"",
    "serve:prod": "pm2 stop ecosystem.config.js --only server && npm run build && pm2 start ecosystem.config.js --only server"
  },
  "author": "Noah Saso <noah@noah.zone>",
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/node": "^18.11.10",
    "@types/prettier": "^2.7.1",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prettier": "^2.8.0",
    "sequelize-cli": "^6.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "koa": "^2.13.4",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.26.0",
    "sequelize-typescript": "^2.1.5"
  }
}
